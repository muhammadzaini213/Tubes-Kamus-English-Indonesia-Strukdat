<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.ComboBox?>

<?import javafx.scene.control.TextArea?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.kamus.gimmick.MainController"
    spacing="10" prefWidth="900" prefHeight="700">


    <!-- Bagian TextArea & ComboBox -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Kolom kiri -->
        <VBox spacing="5" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="10" bottom="20" left="20" />
            </padding>
            <ComboBox fx:id="languageBoxLeft" promptText="Pilih bahasa"
                HBox.hgrow="ALWAYS" style="-fx-font-size: 16px;" />
            <AnchorPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefHeight="300">
                <TextArea fx:id="textAreaLeft"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    wrapText="true"
                    style="-fx-font-size: 16px;" />
            </AnchorPane>
        </VBox>

        <!-- Kolom kanan -->
        <VBox spacing="5" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="10" />
            </padding>
            <ComboBox fx:id="languageBoxRight" promptText="Pilih bahasa"
                HBox.hgrow="ALWAYS" style="-fx-font-size: 16px;" />
            <AnchorPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefHeight="300">
                <TextArea fx:id="textAreaRight"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    wrapText="true"
                    style="-fx-font-size: 16px;" />
            </AnchorPane>
        </VBox>
    </HBox>

    <!-- Bagian gimmick: mengambil sisa layar -->
    <AnchorPane fx:id="gimmickPane" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"
        style="-fx-background-color: #f0f0f0; -fx-border-color: gray; -fx-border-width: 1;">
        <!-- Gimmick akan di-set dari controller -->
    </AnchorPane>


</VBox>